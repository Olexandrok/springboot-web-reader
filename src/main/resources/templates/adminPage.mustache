<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
<div class="container">

    <script src="jquery.min.js"></script>
    <script src="bootstrap.min.js"></script>

    <div>

        <form action="/logout" method="post">
            <input type="submit" value="Sign Out">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        </form>
        <br>

        <form action="/edit" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit" name="action" value="block">Block</button>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit" name="action" value="delete"><i class="fa fa-trash"></i> </button>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit" name="action" value="unblock"><i class="fa fa-unlock"></i></button>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit" name="action" value="admin">Admin</button>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit" name="action" value="unadmin">UnAdmin</button>

            <div class="container" style="margin:45px auto">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <table class="table table-hover table-striped table-bordered" id="table">
                            <thead>
                            <tr>
                                <th style="text-align:center;width:45px;">
                                    <input type="checkbox" id="checkall" onclick="CheckUncheckAll()">
                                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                                </th>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Enabled</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#users}}
                                <tr>
                                    <td>
                                <span>
                                    <input type="checkbox" name="box" class="checkbox"  value="{{id}}">
                                        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                                </span>
                                    </td>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{username}}</td>
                                    <td>{{email}}</td>
                                    <td>{{enabled}}</td>
                                </tr>
                            {{/users}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">function CheckUncheckAll(){
   var  selectAllCheckbox=document.getElementById("checkall");
   if(selectAllCheckbox.checked==true){
    var checkboxes =  document.getElementsByName("box");
     for(var i=0, n=checkboxes.length;i<n;i++) {
      checkboxes[i].checked = true;
     }
    }else {
     var checkboxes =  document.getElementsByName("box");
     for(var i=0, n=checkboxes.length;i<n;i++) {
      checkboxes[i].checked = false;
     }
    }
   }</script>
</body>
</html>