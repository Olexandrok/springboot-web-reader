<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml>
<head>
    {{> meta}}
    <title>Пользователь</title>
    <style>
        .topnav {
  overflow: hidden;
  background-color: #333;
}

.ap {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  overflow: hidden;
}
    </style>
</head>
<body>
<div class="topnav">
    <form action="/" method="get" class="ap">
        <input type="submit" value="Books">
    </form>
    <form action="/user" method="get" class="ap">
        <input type="submit" value="User">
    </form>
    <form action="/login" method="get" style="float: right;">
        <input type="submit" value="Sign Out">
    </form>
</div>
<section class="container">
<div class="mx-auto border my-5 py-3 px-3 form">
{{#user}}
    <img src="data:image<!--/png-->;base64,{{image}}" alt="" />
    <h3>{{name}}</h3>
    <h4>{{username}}</h4>
    <div>
        <p>{{email}}</p>
    </div>

    {{#books}}
    <div class="mt-3">
        <div>
            <form action="/book/{{id}}" method="get">
                <button>
                <h2>{{name}}</h2>
                <h3>{{preview}}</h3>
                </button>
            </form>
        </div>
    </div>
    {{/books}}
    <form action="/create/{{id}}" method="get">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input class="button" type="submit" value="Создать книгу"/>
    </form>
    <br>
    <form action="/user/delete/{{id}}" method="get">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input class="button" type="submit" value="Удаление"/>
    </form>
    <br>
    <form action="/user/edit/{{id}}" method="get">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input class="button" type="submit" value="Изменить"/>
    </form>
{{/user}}
</div>
</section>
</body>
</html>