<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml>
<head>
  {{> meta}}
  <title>Главная</title>
  <style>
                .topnav {
  overflow: hidden;
  background-color: #333;
}

.ap {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  overflow: hidden;
}

    </style>
</head>
<body>
<div class="topnav">
  <form action="/" method="get" class="ap">
    <input type="submit" value="Books">
  </form>
  <form action="/user" method="get" class="ap">
    <input type="submit" value="User">
  </form>
  <form action="/login" method="get" style="float: right;">
    <input type="submit" value="Sign Out">
  </form>
</div>
{{#chapter}}
<section class="container">
  <div class="mx-auto border my-5 py-3 px-3 form">
    <form action="/chapter/edit" method="post">
        <div class="form-group">
            <label for="number">Number</label>
            <input class="form-control" id="number" type="number" name="number" value="{{number}}">
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" type="text" name="name" value="{{name}}">
        </div>
        <div class="form-group">
            <label for="text">Text</label>
            <input class="form-control" id="text" type="text" name="text" value="{{text}}">
        </div>
      <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit" name="chapter" value="{{id}}">Edit</button>
    </form>
  </div>
</section>
{{/chapter}}
</body>
</html>