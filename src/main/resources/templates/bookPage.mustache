<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml>
<head>
    {{> meta}}
    <title>Главная</title>
    <style>
        .topnav {
  overflow: hidden;
  background-color: #333;
}

.ap {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  overflow: hidden;
}
    </style>
</head>
<body>
<div class="topnav">
    <form action="/" method="get" class="ap">
        <input type="submit" value="Books">
    </form>
    <form action="/user" method="get" class="ap">
        <input type="submit" value="User">
    </form>
    <form action="/login" method="get" style="float: right;">
        <input type="submit" value="Sign Out">
    </form>
</div>
<section class="container">
    <div class="mx-auto border my-5 py-3 px-3 form">
        {{#book}}
            <div>
                <img src="data:image<!--/png-->;base64,{{image}}" alt="" />
            </div>
            <div class="form-group">
                Name:
                <label for="name">{{name}}</label>
            </div>

            <div class="form-group">
                Fandom:
                <form action="/fandom" method="get">
                {{#fandom}}
                    <button type="submit" name="fandom" value="{{.}}">
                        {{.}}
                    </button>
                {{/fandom}}
                </form>
            </div>
            <div class="form-group">
                Tags:
                <form action="/tag" method="get">
                    {{#tags}}
                        <button type="submit" name="tag" value="{{.}}">
                            {{.}}
                        </button>
                    {{/tags}}
                </form>
            </div>
            <div class="form-group">
                Preview:
                <label for="preview">{{preview}}</label>
            </div>
        {{/book}}
        <form action="/{{id}}/comments" method="get">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            <input class="button" type="submit" value="Коментарии">
        </form>
            <div class="form-group">
                <label for="chapter">
                {{#chapters}}
                    <form action="/chapter/{{id}}" method="get">
                        <button>
                        {{number}} - {{name}} - {{text}}
                        </button>
                    </form>
                {{/chapters}}

                </label>
            </div>


    </div>
</section>
</body>
</html>